@using CRUD.Models
@using CRUD.ViewModels
@using System.Web.Configuration

@{
    string JqueryUITheme = WebConfigurationManager.AppSettings["JqueryUITheme"].ToString();
    string TelerikTheme = WebConfigurationManager.AppSettings["TelerikTheme"].ToString();
    string Breadcrumb = ViewBag.Breadcrumb;
    string Culture = WebConfigurationManager.AppSettings["Culture"].ToString();

}

<!DOCTYPE html>
<html lang="en">
    @*<head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
